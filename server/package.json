{
  "name": "@linx/server",
  "version": "0.0.1",
  "description": "the server for linx",
  "main": "src/index.ts",
  "scripts": {
    "start": "node dist/src/index.js",
    "dev": "ts-node src/index.ts",
    "build": "tsc",
    "knex:migrate:make": "knex migrate:make -x ts",
    "migrations:up": "knex migrate:latest",
    "migrations:down": "knex migrate:down",
    "lint": "biome format ./src && biome check ./src",
    "format": "biome format --write ./src && biome check --write ./src",
    "format:unsafe": "biome format --write ./src && biome check --write --unsafe ./src"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/Michael-Liendo/linx.git"
  },
  "keywords": ["server"],
  "author": "Michael Liendo <contact@michaelliendo.com> (https://michaelliendo.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Michael-Liendo/linx/issues"
  },
  "homepage": "https://github.com/Michael-Liendo/linx#readme",
  "dependencies": {
    "@fastify/cors": "^8.4.1",
    "@linx/shared": "^0.0.1",
    "@types/jsonwebtoken": "^9.0.6",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.3.1",
    "fastify": "^4.24.3",
    "fastify-plugin": "^4.5.1",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.0.1",
    "pg": "^8.11.3",
    "validator": "^13.11.0",
    "zustand": "^4.5.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^20.14.10",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.3"
  }
}
